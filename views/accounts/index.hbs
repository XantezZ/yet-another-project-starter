{{> accounts-header}}
<div class="container mt-5">
    <div class="row">
        <div class="col-12 col-lg-8 offset-lg-2">
            <a href="/" class="btn btn-outline-primary mb-3">Back to home</a>
            <div class="card">
                <div class="card-header" >
                    <h4>Account Settings</h4>
                    <p>Regularly change password, keep your data up to date and secure.</p>
                </div>
                <div class="card-body">
                    <ul class="nav nav-tabs mb-3" id="pills-tab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#change-password" role="tab" aria-controls="pills-home" aria-selected="true">Change password</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">Manage profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="pills-contact-tab" data-toggle="pill" href="#pills-contact" role="tab" aria-controls="pills-contact" aria-selected="false">Activity history</a>
                        </li>
                    </ul>
                    <div class="tab-content" id="pills-tabContent">
                        <div class="tab-pane fade show active" id="change-password" role="tabpanel" aria-labelledby="pills-home-tab">
                            <form method="post" action="/accounts/password">
                                <div class="form-group">
                                    <label>Current password</label>
                                    <input type="password" class="form-control" placeholder="Current password">
                                </div>
                                <div class="form-group">
                                    <label>New password (8+ characters)</label>
                                    <input type="password" class="form-control" placeholder="New password" pattern=".{8,}" required>
                                </div>
                                <div class="form-group">
                                    <label>Repeat new password</label>
                                    <input type="password" class="form-control" placeholder="Repeat new password" pattern=".{8,}" required>
                                </div>
                                <button type="submit" class="btn btn-primary">Change password</button>
                            </form>
                        </div>
                        <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">...</div>
                        <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">...</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{{> accounts-footer}}
